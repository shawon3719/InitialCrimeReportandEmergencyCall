<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diu.stopwatch.SubmitActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/crime"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint=" Enter Your Name"
        android:background="@drawable/edt_cstm"
        android:drawableLeft="@drawable/edt_right"/>
    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:hint=" Enter Your Contact No."
        android:background="@drawable/edt_cstm"
        android:drawableLeft="@drawable/phn_rsz"/>
    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:hint=" Enter Your Curent Location"
        android:background="@drawable/edt_cstm"
        android:drawableLeft="@drawable/edt_loc"/>
    <EditText
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:hint=" Enter case Details.."
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/edt_cstm" />
    <Button
        android:id="@+id/submit2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit Report"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/button_rsz"
        android:drawableLeft="@drawable/btn_right"/>
    <Button
        android:id="@+id/btn_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Submitted Report"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/button_rsz"/>


    </LinearLayout>
</ScrollView>
